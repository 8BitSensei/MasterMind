<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/puzzle2_cog4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/cog_small" />

    <ImageView
        android:id="@+id/puzzle2_cog5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/cog_small" />

    <ImageView
        android:id="@+id/puzzle2_cog3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/puzzle2_cog5"
        android:layout_marginRight="15dp"
        android:background="@drawable/cog_small" />

    <ImageView
        android:id="@+id/puzzle2_cog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/puzzle2_cog3"
        android:layout_toRightOf="@+id/puzzle2_cog5"
        android:background="@drawable/cog_small" />

    <ImageView
        android:id="@+id/puzzle2_cog1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/puzzle2_cog5"
        android:layout_toRightOf="@+id/puzzle2_cog5"
        android:background="@drawable/cog_small" />

    <ImageView
        android:id="@+id/puzzle2_cog6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/puzzle2_cog4"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/puzzle2_cog3"
        android:background="@drawable/cog_small" />

</LinearLayout>